@model Curso
@{
    ViewData["Title"] = "Información Curso";
    Layout = "Simple";
}

<div class="text-center">
    <strong>Desde la vista normal</strong>
    <h1 class="display-4">@ViewData["Title"]</h1>
    <ul style="list-style-type: none;" class="list-group list-group-horizontal">
        <li>
            <a style="text-decoration: none;" class="list-group-item" href="/Curso/Index">
                << Lista de cursos</a>
        </li>
    </ul>
    <div class="alert alert-success" role="alert"> @ViewBag.MsgResult</div>

    <p>Nombre: @Model.Nombre <br />
        Id : @Model.Id <br />
        Dirección: @Model.Dirección <br />
        Jornada: @Model.Jornada
    </p>

    <strong>Desde la vista parcial</strong>
    <partial name="ObjetoEscuelaSimple" />
</div>
<p> @ViewBag.Fecha </p>
