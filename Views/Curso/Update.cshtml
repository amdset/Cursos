@model Curso
@{
    ViewData["Title"] = "Edición de Curso";
    Layout = "Simple";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div>
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" value="@Model.Nombre" />

        </div>
        <div>
            <label asp-for="Dirección"></label>
            <input asp-for="Dirección" value="@Model.Dirección" />

        </div>
        <div>
            <label asp-for="Jornada"></label>
            @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione una jornada", new {@class="form-control" }
                )
        </div>
        <input type="submit" value="Editar" />
    </form>
</div>
<p> @ViewBag.Fecha </p>
