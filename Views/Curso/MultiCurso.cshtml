@model IEnumerable<Curso>
@{
    ViewData["Title"] = "Información de cursos";
    Layout = "Simple";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <ul style="list-style-type: none;" class="list-group list-group-horizontal">
        <li>
            <a style="text-decoration: none;" class="list-group-item" href="/Curso/Create">Agregar</a>
        </li>
        <li class="list-group-item"> Modificar</li>
    </ul>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Id</th>
                <th scope="col">Jornada</th>
                <th scope="col">Dirección</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)//Some code k
            {
                <tr>
                    <td>@obj.Nombre</td>
                    <td>@obj.Id</td>
                    <td>@obj.Jornada</td>
                    <td>@obj.Dirección</td>
                    <td>
                        <a class="btn btn-primary" href="/Curso/Update/@obj.Id">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/Curso/Update/@obj.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- <strong>Desde la vista parcial</strong>
    <partial name="LstObjetosEscuela"> -->
</div>
<p> @ViewBag.Fecha </p>
